    <script>
        // Navigation functionality
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link, footer a[data-page]');
            const pages = document.querySelectorAll('.page');
            
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetPage = this.getAttribute('data-page');
                    
                    // Hide all pages
                    pages.forEach(page => {
                        page.classList.remove('active');
                    });
                    
                    // Show target page
                    document.getElementById(targetPage).classList.add('active');
                    
                    // Update active nav link
                    navLinks.forEach(navLink => {
                        navLink.classList.remove('active');
                        if (navLink.getAttribute('data-page') === targetPage) {
                            navLink.classList.add('active');
                        }
                    });
                    
                    // Scroll to top
                    window.scrollTo(0, 0);
                });
            });
            
            // Room tabs functionality
            const roomTabs = document.querySelectorAll('.room-tab');
            const roomContents = document.querySelectorAll('.room-content');
            
            roomTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const targetRoom = this.getAttribute('data-room');
                    
                    // Hide all room contents
                    roomContents.forEach(content => {
                        content.classList.add('hidden');
                        content.classList.remove('active');
                    });
                    
                    // Show target room content
                    document.getElementById(`${targetRoom}-content`).classList.remove('hidden');
                    document.getElementById(`${targetRoom}-content`).classList.add('active');
                    
                    // Update active tab
                    roomTabs.forEach(roomTab => {
                        roomTab.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });
        });
    </script>
